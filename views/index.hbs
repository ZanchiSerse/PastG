<div class="row">
    <div class="col-md-8 col-lg-6 offset-md-2 offset-lg-3">
        <div class="text-center mb-4">
            <h1 class="fw-bold">Benvenuto su <span class="text-primary">PastG</span></h1>
            <p class="lead">Accedi al tuo account o crea un nuovo profilo per iniziare.</p>
        </div>
        
        <div class="mb-4 text-center">
            <div class="btn-group btn-group-lg" role="group">
                <button class="btn btn-primary" id="showLogin">Login</button>
                <button class="btn btn-outline-secondary" id="showRegister">Registrazione</button>
            </div>
        </div>

        <!-- Login Form -->
        <div class="card mb-4" id="login-container">
            <div class="card-header">
                <h2 class="h4 m-0"><i class="fas fa-sign-in-alt me-2"></i>Login</h2>
            </div>
            <div class="card-body">
                <form id="loginForm">
                    <div class="mb-3">
                        <label for="loginEmail" class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input type="email" class="form-control" id="loginEmail" name="email" placeholder="Email" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="loginPassword" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input type="password" class="form-control" id="loginPassword" name="password" placeholder="Password" required>
                        </div>
                    </div>
                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-unlock me-2"></i>Accedi
                        </button>
                    </div>
                </form>
                
                <div class="my-4 text-center position-relative">
                    <hr class="text-muted">
                    <span class="position-absolute top-50 start-50 translate-middle px-3 bg-white">oppure</span>
                </div>
                
                <div class="d-grid gap-2">
                    <a href="/auth/google" class="btn btn-outline-danger">
                        <i class="fab fa-google me-2"></i> Accedi con Google
                    </a>
                </div>
            </div>
        </div>

        <!-- Registration Form -->
        <div class="card mb-4" id="register-container">
            <div class="card-header">
                <h2 class="h4 m-0"><i class="fas fa-user-plus me-2"></i>Registrazione</h2>
            </div>
            <div class="card-body">
                <form id="registerForm">
                    <div class="mb-3">
                        <label for="nome" class="form-label">Nome</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="telefono" class="form-label">Telefono</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-phone"></i></span>
                            <input type="text" class="form-control" id="telefono" name="telefono" placeholder="Telefono" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="residenza" class="form-label">Ubicazione</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-home"></i></span>
                            <input type="text" class="form-control" id="residenza" name="residenza" placeholder="Ubicazione" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                        </div>
                    </div>
                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-user-check me-2"></i>Crea Account
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div id="message" class="alert" role="alert"></div>
    </div>
</div>

<!-- Add Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<style>
    /* Simpler styling consistent with other pages */
    .card {
        margin-bottom: 20px;
        border: 1px solid #e5e5e5;
        border-radius: 0.25rem;
    }
    
    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #e5e5e5;
        padding: 0.75rem 1.25rem;
    }
    
    /* Subtle transitions that match the rest of the app */
    .btn {
        transition: all 0.2s ease;
    }
    
    /* Simpler input styling */
    .input-group-text {
        background-color: #f8f9fa;
    }
    
    /* Form transitions */
    #login-container, #register-container {
        transition: opacity 0.3s ease-in-out;
    }
    
    @media (max-width: 576px) {
        .btn-group>.btn {
            padding: 0.375rem 0.75rem;
        }
    }
</style>

<script>
    const loginContainer = document.getElementById('login-container');
    const registerContainer = document.getElementById('register-container');
    const showLoginBtn = document.getElementById('showLogin');
    const showRegisterBtn = document.getElementById('showRegister');
    const message = document.getElementById('message');

    // Funzione per alternare i moduli con animazione
    function toggleForms(showLogin) {
        if (showLogin) {
            registerContainer.style.opacity = '0';
            setTimeout(() => {
                loginContainer.style.display = 'block';
                registerContainer.style.display = 'none';
                setTimeout(() => { loginContainer.style.opacity = '1'; }, 50);
            }, 300);
            
            showLoginBtn.classList.add('btn-primary');
            showLoginBtn.classList.remove('btn-outline-primary');
            showRegisterBtn.classList.add('btn-outline-secondary');
            showRegisterBtn.classList.remove('btn-primary');
        } else {
            loginContainer.style.opacity = '0';
            setTimeout(() => {
                registerContainer.style.display = 'block';
                loginContainer.style.display = 'none';
                setTimeout(() => { registerContainer.style.opacity = '1'; }, 50);
            }, 300);
            
            showRegisterBtn.classList.add('btn-primary');
            showRegisterBtn.classList.remove('btn-outline-secondary');
            showLoginBtn.classList.add('btn-outline-primary');
            showLoginBtn.classList.remove('btn-primary');
        }
        message.innerText = ''; // Reset messaggio
        message.className = 'alert'; // Reset classe
    }

    // Inizializza moduli
    document.addEventListener('DOMContentLoaded', () => {
        // Initial opacity settings
        loginContainer.style.opacity = '0';
        registerContainer.style.opacity = '0';
        
        // Check if user is already authenticated
        fetch('/check-auth', {
            method: 'GET',
            credentials: 'same-origin' // Important for sending cookies
        })
        .then(response => response.json())
        .then(data => {
            if (data.authenticated) {
                window.location.href = data.redirectUrl;
            }
        })
        .catch(error => {
            console.error('Errore nel controllo dell\'autenticazione:', error);
        });
        
        toggleForms(true);
        setTimeout(() => { loginContainer.style.opacity = '1'; }, 100);
        
        showLoginBtn.addEventListener('click', () => toggleForms(true));
        showRegisterBtn.addEventListener('click', () => toggleForms(false));
    });

    // Gestione del form di Login
    document.getElementById('loginForm').addEventListener('submit', event => {
        event.preventDefault();
        const email = document.getElementById('loginEmail').value.trim();
        const password = document.getElementById('loginPassword').value.trim();

        if (!email || !password) {
            message.innerHTML = '<i class="fas fa-exclamation-triangle me-2"></i>Inserisci email e password.';
            message.className = 'alert alert-warning';
            return;
        }

        // Show loading state
        const submitBtn = event.target.querySelector('button[type="submit"]');
        const originalText = submitBtn.innerHTML;
        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Accesso in corso...';
        submitBtn.disabled = true;

        fetch('/login', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email, password })
        })
        .then(response => response.json())
        .then(data => {
            if (data.error) {
                message.innerHTML = `<i class="fas fa-times-circle me-2"></i>${data.error}`;
                message.className = 'alert alert-danger';
                // Reset button
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            } else {
                // Redirect alla pagina corretta in base al ruolo
                window.location.href = data.redirectUrl;
            }
        })
        .catch(error => {
            console.error('Errore durante il login:', error);
            message.innerHTML = '<i class="fas fa-exclamation-circle me-2"></i>Errore durante il login. Riprova più tardi.';
            message.className = 'alert alert-danger';
            // Reset button
            submitBtn.innerHTML = originalText;
            submitBtn.disabled = false;
        });
    });

    // Gestione del form di Registrazione
    document.getElementById('registerForm').addEventListener('submit', event => {
        event.preventDefault();
        const nome = document.getElementById('nome').value.trim();
        const telefono = document.getElementById('telefono').value.trim();
        const residenza = document.getElementById('residenza').value.trim();
        const email = document.getElementById('email').value.trim();
        const password = document.getElementById('password').value.trim();

        if (!nome || !telefono || !residenza || !email || !password) {
            message.innerHTML = '<i class="fas fa-exclamation-triangle me-2"></i>Tutti i campi sono obbligatori.';
            message.className = 'alert alert-warning';
            return;
        }

        // Show loading state
        const submitBtn = event.target.querySelector('button[type="submit"]');
        const originalText = submitBtn.innerHTML;
        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Registrazione in corso...';
        submitBtn.disabled = true;

        fetch('/register', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ nome, telefono, residenza, email, password })
        })
        .then(response => response.json())
        .then(data => {
            if (data.error) {
                message.innerHTML = `<i class="fas fa-times-circle me-2"></i>${data.error}`;
                message.className = 'alert alert-danger';
                // Reset button
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            } else {
                // Redirect alla pagina corretta in base al ruolo
                window.location.href = data.redirectUrl;
            }
        })
        .catch(error => {
            console.error('Errore durante la registrazione:', error);
            message.innerHTML = '<i class="fas fa-exclamation-circle me-2"></i>Errore durante la registrazione. Riprova più tardi.';
            message.className = 'alert alert-danger';
            // Reset button
            submitBtn.innerHTML = originalText;
            submitBtn.disabled = false;
        });
    });
</script>